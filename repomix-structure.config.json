{
  "output": {
    "filePath": "repomix-structure.xml",
    "style": "xml",
    "compress": true,
    "removeComments": false,
    "includeEmptyDirectories": true,
    "outputShowLineNumbers": false
  },
  "include": [
    "**/README.md",
    "**/readme.md",
    "**/package.json",
    "**/.env.example",
    "**/tsconfig.json",
    "**/next.config.js",
    "**/site.config.ts",
    "**/lib/site-config.ts",
    "**/lib/types.ts",
    "**/pages/index.tsx",
    "**/pages/_app.tsx",
    "**/pages/[pageId].tsx",
    "**/pages/admin.tsx",
    "**/pages/admin/**/*.jsx",
    "**/components/NotionPage.tsx",
    "**/components/Header.tsx",
    "**/components/Footer.tsx",
    "**/components/CacheManagement.tsx",
    "**/components/FontSettingsPanel.jsx",
    "**/components/ColorSettingsPanel.jsx",
    "**/components/FontStyler.jsx",
    "**/components/ColorStyler.jsx",
    "**/hooks/useRealtimeUpdates.ts",
    "**/pages/api/cache-*.ts",
    "**/lib/cache.ts",
    "**/lib/font-customizer/index.js",
    "**/lib/color-settings.js"
  ],
  "ignore": {
    "customPatterns": [
      "**/node_modules/**",
      "**/.next/**",
      "**/dist/**",
      "**/build/**",
      "**/*.log",
      "**/coverage/**",
      "**/.git/**",
      "**/repomix*.xml",
      "**/*summary.md",
      "**/temp/**"
    ]
  }
}
